<resources>
  <style name="Theme.AnyplaceTheme.ProgressBarHorizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
    <item name="android:minHeight">10dip</item>
    <item name="android:maxHeight">10dip</item>
  </style>

  <style name="Theme.AnyplaceTheme" parent="Theme.AppCompat">
    <item name="actionBarStyle">@style/Widget.AnyplaceTheme.ActionBar</item>
